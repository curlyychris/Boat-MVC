@using Lab8.Models
@model boat
@{
    ViewBag.Title = "Create new boat";
}
<br />
<div class="form-horizontal">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Create", "Boat", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-12 text-center">
                    <h2>Create</h2>
                    <h4>Boat</h4>
                    <hr />
                </div>
                //cant create a table without dropdown. You need an existing colour and category to create a new boat
                <div class="form-group">
                    @Html.LabelFor(m => m.fkcolourid, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("fkcolourid", null, "Select Colour", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.fkcategoryid, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("fkcategoryid", null, "Select Category", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                //input field for name
                <div class="form-group">
                    @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>
                //input field for hour_rate
                <div class="form-group">
                    @Html.LabelFor(model => model.hour_rate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hour_rate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hour_rate, "", new { @class = "text-danger" })
                    </div>
                </div>
                //input field for daily_rate
                <div class="form-group">
                    @Html.LabelFor(model => model.daily_rate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.daily_rate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.daily_rate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>

